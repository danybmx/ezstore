extends ../layout

append content
  div#main-carousel.carousel.slide(data-ride="carousel")
    ol.carousel-indicators
      li(data-target="#main-carousel", data-slide-to="0", class="active")
      li(data-target="#main-carousel", data-slide-to="1")

    div.carousel-inner(role="listbox")
      div.item.active(style="background-image: url('img/slider/1.jpg')")
        div.carousel-caption
          h3 Encuentra toda la ropa que est√°s buscando
      div.item(style="background-image: url('img/slider/2.jpg')")
        div.carousel-caption
          h3 Busca tu mejor look

    a.left.carousel-control(href="#main-carousel", role="button", data-slide="prev")
      span.fa.fa-angle-left.fa-fw.fa-5x
    a.right.carousel-control(href="#main-carousel", role="button", data-slide="next")
      span.fa.fa-angle-right.fa-fw.fa-5x

  div.featured-products.container
    h2 Productos destacados


    div.row
    each product in products
      a.col-xs-12.col-sm-6.col-md-4.col-lg-3.product(href="/products/"+product.id+"/"+product.slug)
        span.image(style="background-image: url(" + config.staticResources + '/products/' + product.images[0].file + ")")
        h3=product.name
        span.price=currency(product.priceTaxIncluded)
