@import colors
@import carousel
@import products
@import shopcart

body
  padding-top 86px
  min-height 100%
  position relative
  padding-bottom 100px

header
  height 86px
  border-bottom 6px solid gray-5
  width 100%
  position absolute
  top 0
  left 0
  right 0
  background-color header-bg

  #logo
    text-align center
    position absolute
    width 180px
    padding 15px
    background-color header-logo-bg
    img
      height 50px

  #topbar
    margin-left 180px
    background-color header-bg
    height 40px
    padding-left 10px

    a
      color header-logo-bg
      display inline-block
      line-height 40px
      padding 0 10px

    div.left
      float left
      height 40px

      .user
        display inline-block
        height 40px
        line-height 40px
        color header-logo-bg
        padding 0 15px 0 10px
        margin-right 5px
        border-right 1px solid darken(header-bg, 10%)

    div.right
      float right
      height 40px

      div.social, div.shopcart
        border-left 1px solid darken(header-bg, 10%)
        display inline-block

        a
          text-decoration none
          text-align center
          vertical-align middle
          height 40px
          line-height 40px

          i
            line-height 40px

          &:hover
            background-color darken(header-bg, 10%)



  #navigation
    margin-left 180px
    background-color white
    height 40px

    #main-navigation
      padding-left 10px
      a
        padding 0 10px
        height 40px
        line-height 40px

      #search
        width 200px
        background-color header-logo-bg

        input
          border none
          width 150px
          margin-right 10px
          height 40px
          line-height 40px
          outline none
          padding-left 15px
          background-color transparent

        button
          border none
          background transparent
          line-height 40px
          height 40px
          padding 0 10px
          width 40px
          text-align center
          &:hover
            background-color darken(header-bg, 10%)
            color header-logo-bg

h2
  text-align center
  text-transform uppercase
  font-weight 200
  margin 30px 0
  color main-blue

h4
  font-weight normal
  font-size 1em
  margin 10px 0
  color gray-70

footer
  position absolute
  bottom 0
  right 0
  left 0
  margin-top 20px
  border-top 2px solid gray-10
  background-color gray-5
  padding 15px
  text-align right

  a
    text-decoration none !important
    padding 5px
    color main-blue
    background-color gray-10
    border-radius 5px
    margin-left 6px

    &:hover
      color white
      background-color main-blue
