.featured-products
  .product
    cursor pointer
    color gray-60
    text-decoration none
    padding-top 15px
    padding-bottom 15px
    &:hover
      box-shadow 0 0 6px gray-20

    .image
      display block
      background-size cover
      background-repeat no-repeat
      height 200px

    h3
      font-size 1em
      text-align center
      margin 15px 0 0
      text-transform uppercase
      white-space nowrap
      text-overflow ellipsis
      overflow hidden

    .price
      display block
      text-align center
      font-size 1.4em
      font-weight 200

#product
  #product-carousel
    height 400px

    .item
      width 100%
      height 100%
      background-size cover
      background-position center center
      background-repeat no-repeat

    .carousel-control span
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)

  .content
    .data
      .stock-message
        display none
        padding 6px 0
        font-size 0.9em
        &#no-stock
          color rgb(163, 16, 16)
        &#last-units
          color rgb(221, 115, 18)
      .price
        line-height 34px
        font-size 2em
        font-weight 200
      .description
        margin-bottom 20px
